									<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.achievements.$dirty && studentRegisterForm.achievements.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.achievements.$dirty && studentRegisterForm.achievements.$invalid"></span>
							    </div>
							</div>
							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.yearOfGraduation.$dirty && studentRegisterForm.yearOfGraduation.$valid, 'has-error': studentRegisterForm.yearOfGraduation.$dirty && studentRegisterForm.yearOfGraduation.$invalid}">
