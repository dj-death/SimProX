								<div class="col-sm-offset-3 col-sm-6">
									<input type="text" class="form-control input-sm" id="month-of-graduation" name='monthOfGraduation' ng-model='monthOfGraduation' placeholder="{{'e4eStudentMonthOfGraduation' | translate }}" required>
									<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.monthOfGraduation.$dirty && studentRegisterForm.monthOfGraduation.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.monthOfGraduation.$dirty && studentRegisterForm.monthOfGraduation.$invalid"></span>
							    </div>
							</div>
							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.currentYear.$dirty && studentRegisterForm.currentYear.$valid, 'has-error': studentRegisterForm.currentYear.$dirty && studentRegisterForm.currentYear.$invalid}">
								<div class="col-sm-offset-3 col-sm-6">
									<input type="text" class="form-control input-sm" id="current-year" name='currentYear' ng-model='currentYear' placeholder="{{'e4eStudentCurrentYear' | translate }}" required>
									<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.currentYear.$dirty && studentRegisterForm.currentYear.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.currentYear.$dirty && studentRegisterForm.currentYear.$invalid"></span>
							    </div>
							</div>
							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.uploadResume.$dirty && studentRegisterForm.uploadResume.$valid, 'has-error': studentRegisterForm.uploadResume.$dirty && studentRegisterForm.uploadResume.$invalid}">
