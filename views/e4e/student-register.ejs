									<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.highestEDU.$dirty && studentRegisterForm.highestEDU.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.highestEDU.$dirty && studentRegisterForm.highestEDU.$invalid"></span>
							    </div>
							</div>
							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.marjors.$dirty && studentRegisterForm.marjors.$valid, 'has-error': studentRegisterForm.marjors.$dirty && studentRegisterForm.marjors.$invalid}">
