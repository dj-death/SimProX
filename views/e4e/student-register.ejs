<% include ./include/registerheader.html %>
<body ng-app='e4eregister'>

	<div id="header" class="white-header" ng-controller="registerHeaderController">
		<div class="wrap">
			<div class="e4e-logo">
				<a href="#">
					<img src="/appe4e/img/LOGO-E4E-white.png" alt="">
				</a>
			</div>
			<div class="learning-logo">
				<a href="/">
					<img src="/appe4e/img/LOGO-HCDLEARNING-white.png" alt="">
				</a>
			</div>
			<div class="languages">
				<nav class="nav-header">
					<ul>
						<li ng-class="{'active':!isEnglish}">
							<a href='' class="f-bold" ng-click="changeLanguage('zh_CN')">中</a>
						</li>
						<li ng-class="{'active':isEnglish}">
							<a href='' class="f-bold" ng-click="changeLanguage('en_US')">EN</a>
						</li>
					</ul>
				</nav>
			</div>
		</div>
	</div>
	<div id="footer">
		<div class="wrap">
			<span class="col-lg-6 text-left">© HCD Learning Ltd. 沪ICP 10011451号</span>
			<span class="col-lg-6 text-right">HCD Learning 合得软件</span>
		</div>
	</div>

	<div id="student-register" ng-controller='studentRegisterController'>
		<form name="studentRegisterForm" role="form">
			<div class="section section-red" id="section0">
				<div>
					<div class="register-title">
						<h3 class="f-semibold text-center f-size-26">{{'e4eStudentRegisterTitle' | translate }}</h3>
					</div>
					<div class="student-back-1">
						<h4 class="f-semibold text-center f-size-20 padding-10">{{'e4eStudentFirstPageTitle' | translate }}</h4>
						<div class="form-horizontal">
							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.userName.$dirty && studentRegisterForm.userName.$valid, 'has-error': studentRegisterForm.userName.$dirty && studentRegisterForm.userName.$invalid}">
							    <label for="user-name" class="col-sm-3-5 control-label">{{'e4eStudentUserName' | translate }}</label>
							    <div class="col-sm-4-2">
							    	<input type="text" class="form-control input-sm" id="user-name" name='userName' ng-model='userName' placeholder="xxxxxxx" required>
							    	<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.userName.$dirty && studentRegisterForm.userName.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.userName.$dirty && studentRegisterForm.userName.$invalid"></span>
							    </div>
							</div>

							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.firstName.$dirty && studentRegisterForm.firstName.$valid, 'has-error': studentRegisterForm.firstName.$dirty && studentRegisterForm.firstName.$invalid}">
							    <label for="first-name" class="col-sm-3-5 control-label">{{'e4eStudentFirstName' | translate }}</label>
							    <div class="col-sm-4-2">
							    	<input type="text" class="form-control input-sm" id="first-name" name='firstName' ng-model='firstName' placeholder="xxxxxxx" required>
							    	<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.firstName.$dirty && studentRegisterForm.firstName.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.firstName.$dirty && studentRegisterForm.firstName.$invalid"></span>
							    </div>
							</div>
							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.lastName.$dirty && studentRegisterForm.lastName.$valid, 'has-error': studentRegisterForm.lastName.$dirty && studentRegisterForm.lastName.$invalid}">
							    <label for="last-name" class="col-sm-3-5 control-label">{{'e4eStudentLastName' | translate }}</label>
							    <div class="col-sm-4-2">
							    	<input type="text" class="form-control input-sm" id="last-name" name='lastName' ng-model='lastName' placeholder="xxxxxxx" required>
							    	<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.lastName.$dirty && studentRegisterForm.lastName.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.lastName.$dirty && studentRegisterForm.lastName.$invalid"></span>
							    </div>
							</div>

							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.age.$dirty && studentRegisterForm.age.$valid, 'has-error': studentRegisterForm.age.$dirty && studentRegisterForm.age.$invalid}">
							    <label for="age" class="col-sm-3-5 control-label">{{'e4eStudentAge' | translate }}</label>
							    <div class="col-sm-4-2">
							    	<input type="text" class="form-control input-sm" id="age" name='age' ng-model='age' placeholder="xxxxxxx" required>
							    	<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.age.$dirty && studentRegisterForm.age.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.age.$dirty && studentRegisterForm.age.$invalid"></span>
							    </div>
							</div>

							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.country.$dirty && studentRegisterForm.country.$valid, 'has-error': studentRegisterForm.country.$dirty && studentRegisterForm.country.$invalid}">
							    <label for="country" class="col-sm-3-5 control-label">{{'e4eStudentCountry' | translate }}</label>
							    <div class="col-sm-4-2">
							    	<input type="text" class="form-control input-sm" id="country" name='country' ng-model='country' placeholder="xxxxxxx" required>
							    	<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.country.$dirty && studentRegisterForm.country.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.country.$dirty && studentRegisterForm.country.$invalid"></span>
							    </div>
							</div>

							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.address.$dirty && studentRegisterForm.address.$valid, 'has-error': studentRegisterForm.address.$dirty && studentRegisterForm.address.$invalid}">
							    <label for="address" class="col-sm-3-5 control-label">{{'e4eStudentAddress' | translate }}</label>
							    <div class="col-sm-4-2">
							    	<input type="text" class="form-control input-sm" id="address" name='address' ng-model='address' placeholder="xxxxxxx" required>
							    	<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.address.$dirty && studentRegisterForm.address.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.address.$dirty && studentRegisterForm.address.$invalid"></span>
							    </div>
							</div>

							<h4 class="f-semibold text-center f-size-20 append-bottom-24">{{'e4eStudentCommDetail' | translate }}</h4>

							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.email.$dirty && studentRegisterForm.email.$valid, 'has-error': studentRegisterForm.email.$dirty && studentRegisterForm.email.$invalid}">
							    <label for="email" class="col-sm-3-5 control-label">{{'e4eStudentEmail' | translate }}</label>
							    <div class="col-sm-4-2">
							    	<input type="email" class="form-control input-sm" id="email" name='email' ng-model='email' placeholder="xxxxxxx" required>
							    	<span class="glyphicon glyphicon-ok form-control-feedback" ng-show="studentRegisterForm.email.$dirty && studentRegisterForm.email.$valid"></span>
							    	<span class="glyphicon glyphicon-remove form-control-feedback" ng-show="studentRegisterForm.email.$dirty && studentRegisterForm.email.$invalid"></span>
							    </div>
							</div>

							<div class="form-group has-feedback" ng-class="{'has-success':studentRegisterForm.qq.$dirty && studentRegisterForm.qq.$valid, 'has-error': studentRegisterForm.qq.$dirty && studentRegisterForm.qq.$invalid}">
							    <label for="qq" class="col-sm-3-5 control-label">{{'e4eStudentQQ' | translate }}</label>
